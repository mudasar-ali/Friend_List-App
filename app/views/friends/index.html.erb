<% if user_signed_in?%>

<% if notice%>
<%= render "layouts/alerts"%>
<% end%>

<h1>Listing All Friends</h1>

<div id="friends">
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
<tr>
<th>Name</th>
<th>Email</th>
<th>Phone</th>
<th>Twitter</th>
<th>User Id</th>
<th colspan="1"></th>
</tr>
</thead>
<tbody>
 <% @friends.each do |friend| %>
   <tr>
      <td><%= link_to friend.firs_name + " " + friend.last_name, friend%> </td>
      <td><%=friend.email%></td>
      <td><%=friend.phone%></td>
      <td><%=friend.twitter%></td>
      <td><%=friend.user_id%></td>
      <td><%= button_to "Delete", friend , method: :delete, class: "btn btn-outline-danger " %></td>




    </tr>
  <% end %>

</tbody>

</table>
<%= link_to "Add Friend", new_friend_path, class: "btn btn-secondary"%>
<%else%>
<%=render "home/index"%>
<%end%>


